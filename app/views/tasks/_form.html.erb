<%= form_for(task) do |f|%>

   <% if task.errors.any? %>
      <div id="error_explanation">
         <ul>
            <% task.errors.full_messages.each do |message|%>
            <li><%= message %></li>
            <%end%>
         </ul>
      </div>
   <% end %>

   <%= f.label :title,'タイトル'%>
   <%= f.text_field :title%>
   <%= f.label :content,'タスク'%>
   <%= f.text_field :content%>
   
   <%= f.label :status,'状態'%>
   <%= f.text_field :status%>
   
   
   <!--<%= radio_button_tag(:status, "Done") %>-->
   <!--<%= label_tag(:status_done, "Done") %>-->
   <!--<%= radio_button_tag(:status, "Todo") %>-->
   <!--<%= label_tag(:status_todo, "Todo") %>-->
   
   <%= f.submit '登録'%>
<%end%>